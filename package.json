{
  "name": "tailwind-radix-plugin",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:prettier": "turbo run lint:prettier",
    "test:lint": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "test:prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=tailwind-radix-colors && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.8.8",
    "turbo": "^1.9.9"
  },
  "packageManager": "npm@9.4.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
